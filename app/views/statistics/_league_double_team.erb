<ul data-role="listview" class="ui-listview">
	<li data-role="list-divider" role="heading" class="ui-li ui-li-divider ui-btn ui-bar-d">
	Team standings
	</li>
</ul>
<br />
<style>
	table th, table td {text-align:right}
	.red {color:#e00c20}
	.blue {color:#205bd5}
	.green {color:#72c635}
</style>

<table style="width:100%">
	<thead>
		<tr>
		<th style="text-align:left">Team</th>
		<th>P</th>
		<th>W</th>
		<th>L</th>
		<th>D</th>
		<th>PTS</th>
		</tr>
	</thead>
	<tbody>
		<% teams.select{|t| t.players.length > 1}.each do |team| %>
		<tr>
		<td style="text-align:left"><%= team.display_name %></td>
		<td><%= team.matches.length %></td>
		<td class="green"><%= team.wins %></td>
		<td class="red"><%= team.losses %></td>
		<td><%= team.draws %></td>
		<td class="blue"><%= team.points %></td>
		</tr>
		<% end %>
	</tbody>
	<tfooter>
	</tfooter>
</table>


